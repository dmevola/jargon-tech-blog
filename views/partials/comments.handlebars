<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta has-background-grey-lighter">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text has-background-primary-light">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>